<div class="row">
  <div class="col m6 offset-m3 center">
    <h5>Log in</h5>

    <%= link_to "Log in with Google", user_google_oauth2_omniauth_authorize_path, class: "btn red darken-1" %>
    <br><br>
    <%= link_to "Log in with Facebook", user_facebook_omniauth_authorize_path, class: "btn blue darken-4" %>
    <br><br>
    <%= link_to "Log in with Github", user_github_omniauth_authorize_path, class: "btn grey darken-2" %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render partial: "shared/devisemes" %>
      <div class="intput-field">
        <%= f.email_field :email, :id => "email", :class => "validate", :placeholder => "Email" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Password" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up</button>
      <%= link_to "Forget password", new_user_password_path, :class => "btn waves-effect waves-light" %>
    <% end %>
  </div>
</div>
